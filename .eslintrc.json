{
  "env": { "node": true, "jest": true, "es2024": true },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "airbnb-base",
    "airbnb-typescript/base",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:@typescript-eslint/strict",
    "plugin:jest/recommended",
    "plugin:jest/style",
    "plugin:jest/all",
    "plugin:prettier/recommended"
  ],
  "ignorePatterns": ["node_modules", ".vscode", "dist"],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": true,
    "sourceType": "module",
    "tsconfigRootDir": "./"
  },
  "plugins": [
    "@typescript-eslint",
    "prefer-arrow-functions",
    "prettier",
    "simple-import-sort",
    "jest"
  ],
  "root": true,
  "rules": {
    "@typescript-eslint/consistent-type-definitions": [2, "type"],
    "@typescript-eslint/consistent-type-imports": [2],
    "@typescript-eslint/explicit-member-accessibility": [2],
    "@typescript-eslint/naming-convention": [
      2,
      {
        "format": ["PascalCase"],
        "leadingUnderscore": "allow",
        "selector": ["typeLike"]
      },
      {
        "format": ["PascalCase", "camelCase"],
        "selector": ["variable"],
        "types": ["function"]
      },
      {
        "format": ["camelCase", "UPPER_CASE"],
        "leadingUnderscore": "allowDouble",
        "selector": ["variable"],
        "types": ["array", "boolean", "number", "string"]
      },
      {
        "format": null,
        "modifiers": ["requiresQuotes"],
        "selector": ["objectLiteralProperty"]
      },
      { "format": ["camelCase"], "selector": ["parameter"] }
    ],
    "@typescript-eslint/no-floating-promises": [0],
    "@typescript-eslint/no-throw-literal": [0],
    "max-classes-per-file": [2, { "max": 5 }],
    "no-console": [0],
    "no-param-reassign": [2, { "props": false }],
    "no-underscore-dangle": [2, { "allow": ["__filename", "__dirname"] }],
    "prefer-arrow-functions/prefer-arrow-functions": [2],
    "prettier/prettier": [
      2,
      {
        "arrowParens": "avoid",
        "bracketSameLine": true,
        "endOfLine": "auto",
        "parser": "typescript",
        "singleAttributePerLine": true,
        "trailingComma": "es5"
      }
    ],
    "simple-import-sort/exports": [2],
    "simple-import-sort/imports": [
      2,
      {
        "groups": [
          // Side effect imports.
          ["^\\u0000"],
          // Node.js builtins prefixed with `node:`.
          ["^node:"],
          // Packages.
          // Things that start with a letter (or digit or underscore), or `@` followed by a letter.
          ["^@?\\w"],
          // Absolute imports and other imports such as Vue-style `@/foo`.
          // Anything not matched in another group.
          ["^"],
          // Relative imports.
          // Anything that starts with a dot.
          ["^\\."],
          ["^\\./src/array.*"],
          ["^\\./src/object.*", "^\\./src/pick$"],
          ["^\\./src/.*Case$|capitalize$"]
        ]
      }
    ]
    // "jest/prefer-expect-assertions": [2]
    // "jest/no-hooks": [2, { "allow": ["beforeEach"] }]
    // "jest/no-standalone-expect": [0]
    // "jest/prefer-expect-assertions": []
  },
  "settings": {
    "jest": {
      "version": "detect"
    }
  }
}
